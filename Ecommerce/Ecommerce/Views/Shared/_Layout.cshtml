@model HomeProductViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <link rel="stylesheet" href="~/css/GeneralStyle.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
</head>
<body>
	<div class="Cont profileHeader" style="padding-top:3px">
		<div class="center" style="font-size:16px">
            <div class="first" style="cursor:pointer;flex-grow:8">
                <span style="margin-right:10px!important">EN<i class="fa fa-caret-down"></i></span>
                <span>USD <i class="fa fa-caret-down"></i></span>
            </div>
            <div class="second" style="cursor:pointer;flex-grow:1;display:flex; justify-content:space-between;align-items:center">
                @if(Model.SessionId == null)
                {
                    <button style="padding:10px 30px;border-radius:4px;border:none;cursor:pointer;background:dodgerblue"><a asp-controller="Auth" asp-action="Register" style="color:white;text-decoration:none;font-weight:600;"><span class="fa fa-user"></span>Register</a></button>
                    <button style="padding:10px 30px;border-radius:4px;border:none;cursor:pointer"><a asp-controller="Auth" asp-action="Login" style="color:dodgerblue;text-decoration:none;font-weight:600;"><span class="fa fa-sign-in"></span>Login in</a></button>
                }
                @if(Model.Email == null){
                    <span><i class="fa fa-user"></i>
                        My Profile
                    </span>
                }else{
                    <a style="text-decoration:none;color:forestgreen" title="logout" asp-controller="Home" asp-action="Logout" >
                        <i class="fa fa-user"></i>
                         @Model.Email
                    </a>
                }
                <span><i class="fa fa-cart-shopping"></i>Items</span>
                <span>$0.00<i class="fa fa-search"></i></span>
            </div>
        </div>
    </div>
    <div class="Cont pageHeader">
        <div class="center" style="height:100px;background;align-items:center;font-weight:300">
            <div style="flex-grow:5;cursor:pointer;display:flex; position:relative">
				<img src="~/Images/Rectangle 383.png" width="35px" height="35px" alt="logo" />
				<img src="~/Images/Vector 40 (Stroke).png" style="position:absolute;left:8px;top:6px" width="20px" height="auto" alt="" />
				<span style="font-size:18px;font-weight:600;margin-left:15px;align-self:center">E-Comm</span>
            </div>
            <div style="font-size:20px;flex-grow:2;display:flex;justify-content:space-between;cursor:pointer">
                <span style="color:dodgerblue">HOME</span>
                <span>BAGS</span>
                <span>SNICKERS</span>
                <span>BELT</span>
                <span>CONTACT</span>
            </div>
        </div>
    </div>
    @RenderBody()
    <div class="Cont Bottom" style="background-color:lightblue;margin-left:-8px">
        <div class="center" style="height:600px;padding-top:70px;flex-wrap:wrap">
            <div style="width:30%">
                <div style="flex-grow:5;cursor:pointer;display:flex; position:relative">
                    <img src="~/Images/Rectangle 383.png" width="35px" height="35px" alt="logo" />
                    <img src="~/Images/Vector 40 (Stroke).png" style="position:absolute;left:8px;top:6px" width="20px" height="auto" alt="" />
                    <span style="font-size:18px;font-weight:600;margin-left:15px;align-self:center">E-Comm</span>
                </div>
                <div style="margin-top:10px!important">
                    Lorem Ipsum is simply dummy text of the <br>
                    printing and typesetting industry. Lorem <br>
                    Ipsum has been the industry's standard <br>
                    dummy text ever.Since the 1500s, when an <br>
                    unknown printer.
                </div>
            </div>

            <div style="width:30%">

                <div style="flex-grow:5;cursor:pointer;display:flex; position:relative">
                    <span style="font-weight:700;font-size:20px">Follow Us</span>
                </div>
                <div style="margin-top:10px!important">
                    Since the 1500s, when an unknown`<br>
                    printer took a galley of type and scrambled.
                    <i class="fa fa-facebook-f"></i>
                    <i class="fa fa-square-twitter"></i>
                </div>

            </div>

            <div style="width:30%">
                <div style="flex-grow:5;cursor:pointer;display:flex; position:relative">
                    <span style="font-weight:700;font-size:20px">Contact Us</span>
                </div>
                <div style="margin-top:10px!important">
                    E-Comm , 4578 <br>Marmora Road,<br> Glasgow D04 89GR
                </div>
            </div>

            <div style="width:20%">
                <div style="flex-grow:5;cursor:pointer;display:flex; position:relative">
                    <span style="font-weight:700;font-size:20px">Information</span>
                </div>
                <div style="margin-top:10px!important">
                    About Us<br>
                    Infomation <br>
                    Privacy Policy <br>
                    Terms & Conditions
                </div>
            </div>

            <div style="width:20%">
                <div style="flex-grow:5;cursor:pointer;display:flex; position:relative">
                    <span style="font-weight:700;font-size:20px">Service</span>
                </div>
                <div style="margin-top:10px!important">
                    About Us<br>
                    Infomation <br>
                    Privacy Policy <br>
                    Terms & Conditions
                </div>
            </div>
            <div style="width:20%">
                <div style="flex-grow:5;cursor:pointer;display:flex; position:relative">
                    <span style="font-weight:700;font-size:20px">My Account</span>
                </div>
                <div style="margin-top:10px!important">
                    About Us<br>
                    Infomation <br>
                    Privacy Policy <br>
                    Terms & Conditions
                </div>
            </div>
            <div style="width:30%">
                <div style="flex-grow:5;cursor:pointer;display:flex; position:relative">
                    <span style="font-weight:700;font-size:20px">Our Offers</span>
                </div>
                <div style="margin-top:10px!important">
                    About Us<br>
                    Infomation <br>
                    Privacy Policy <br>
                    Terms & Conditions
                </div>
            </div>
			
		</div>
    </div>
        
    @RenderSection("Scripts", required: false)
    
</body>
</html>
